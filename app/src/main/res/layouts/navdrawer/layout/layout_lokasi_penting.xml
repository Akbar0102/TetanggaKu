<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="25dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/myImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3d66cf"/>


        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_lokasi_tetangga"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="30dp"
                    android:drawableTop="@mipmap/ic_launcher"
                    android:src="@mipmap/ic_launcher"
                    android:text="Lokasi Tetangga" />

                <Button
                    android:id="@+id/btn_grosir"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="30dp"
                    android:drawableTop="@mipmap/ic_launcher"
                    android:src="@mipmap/ic_launcher"
                    android:text="Grosir dan UMKM" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_wilayah"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="30dp"
                    android:drawableTop="@mipmap/ic_launcher"
                    android:src="@mipmap/ic_launcher"
                    android:text="Wil. Administrasi" />

                <Button
                    android:id="@+id/btn_entertainment"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="30dp"
                    android:drawableTop="@mipmap/ic_launcher"
                    android:src="@mipmap/ic_launcher"
                    android:text="Entertainment" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>